<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

    </style>

    <style name="PopupMenuListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:background">@color/white</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:divider">@null</item>

    </style>

    <style name="PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="edit_text_theme">
        <item name="android:layout_width">@dimen/dim_320</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_dim_16</item>
        <item name="android:paddingTop">@dimen/dim_12</item>
        <item name="android:paddingBottom">@dimen/dim_12</item>
        <item name="android:paddingRight">@dimen/dim_8</item>
        <item name="android:layout_marginTop">@dimen/dim_8</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="button_theme">
        <item name="android:layout_width">@dimen/dim_320</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_dim_16</item>
        <item name="android:background">@drawable/button_theem</item>
        <item name="android:layout_marginTop">@dimen/dim_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/dim_12</item>
    </style>

</resources>
